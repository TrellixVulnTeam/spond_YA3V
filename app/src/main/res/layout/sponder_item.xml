<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <ImageView
        android:id="@+id/sponder_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/no_account_photo" />

    <TextView
        android:id="@+id/sponder_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sponder_image"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/sponder_image"
        android:text="@string/displayName_default"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sponder_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sponder_displayName"
        android:layout_below="@+id/sponder_displayName"
        android:layout_marginTop="10dp"
        android:text="@string/status_default" />

    <ImageView
        android:id="@+id/sponder_online"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sponder_displayName"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/sponder_displayName"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_icon" />

</RelativeLayout>